Un constructor declarado en un tipo con lista de parámetros debe tener un inicializador de constructor ''this''.
El nombre del tipo o del espacio de nombres 'IEnvioSmsRepository' no se encontró (¿falta una directiva using o una referencia de ensamblado?)
El nombre del tipo o del espacio de nombres 'Infrastructure' no se encontró (¿falta una directiva using o una referencia de ensamblado?)



namespace Notificador
{
    public class Worker(ILogger<Worker> logger) : BackgroundService
    {
        private readonly ILogger<Worker> _logger;
        private readonly IServiceProvider _serviceProvider;
        private readonly int _intervaloDefault = 5000; // intervalo en ms si no hay en BD

        public Worker(ILogger<Worker> logger, IServiceProvider serviceProvider)
        {
            _logger = logger;
            _serviceProvider = serviceProvider;
        }

        protected override async Task ExecuteAsync(CancellationToken stoppingToken)
        {
            _logger.LogInformation("EnvioSmsWorker iniciado.");

            while (!stoppingToken.IsCancellationRequested)
            {
                try
                {
                    using (var scope = _serviceProvider.CreateScope())
                    {
                        var envioSmsRepository = scope.ServiceProvider.GetRequiredService<IEnvioSmsRepository>();

                        // Aquí llamamos al método que envía los SMS pendientes
                        await envioSmsRepository.EnviarSmsPendientesAsync(stoppingToken);
                    }
                }
                catch (Exception ex)
                {
                    _logger.LogError(ex, "Error general en EnvioSmsWorker");
                }

                // Esperamos el intervalo antes de la siguiente ejecución
                int intervalo = _intervaloDefault;

                try
                {
                    using (var scope = _serviceProvider.CreateScope())
                    {
                        var dbContext = scope.ServiceProvider.GetRequiredService<Infrastructure.Data.AppDbContext>();
                        var intervaloBD = dbContext.ParamIntervalosEjecucions.FirstOrDefault();
                        if (intervaloBD != null)
                            intervalo = intervaloBD.Sms; // tomamos el intervalo desde BD si existe
                    }
                }
                catch (Exception ex)
                {
                    _logger.LogWarning(ex, "No se pudo obtener intervalo desde BD. Se usa valor default.");
                }

                await Task.Delay(intervalo, stoppingToken);
            }

            _logger.LogInformation("EnvioSmsWorker detenido.");
        }
    }
}
