private string EnmascararPinEnTrama(string trama)
{
    if (!_enmascararPinEnLogs ||
        string.IsNullOrWhiteSpace(trama) ||
        trama.Length < 28)
        return trama;

    return trama.Substring(0, 24) +
           "****" +
           trama.Substring(28);
}



_logger.LogInformation("Trama respuesta AS400: {Trama}", EnmascararPinEnTrama(tramaRespuesta));