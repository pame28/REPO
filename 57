-- Para SMS
ALTER TABLE BANDEJA_ENVIO_SMS
ALTER COLUMN FechaInicio DATETIME NOT NULL;
ALTER TABLE BANDEJA_ENVIO_SMS
ALTER COLUMN FechaFinal DATETIME NOT NULL;

ALTER TABLE BANDEJA_ENVIO_SMS
ADD CONSTRAINT DF_BANDEJA_SMS_FechaInicio DEFAULT SYSDATETIME() FOR FechaInicio;
ALTER TABLE BANDEJA_ENVIO_SMS
ADD CONSTRAINT DF_BANDEJA_SMS_FechaFinal DEFAULT SYSDATETIME() FOR FechaFinal;

-- Para Email
ALTER TABLE BANDEJA_ENVIO_EMAIL
ALTER COLUMN FechaInicio DATETIME NOT NULL;
ALTER TABLE BANDEJA_ENVIO_EMAIL
ALTER COLUMN FechaFinal DATETIME NOT NULL;

ALTER TABLE BANDEJA_ENVIO_EMAIL
ADD CONSTRAINT DF_BANDEJA_EMAIL_FechaInicio DEFAULT SYSDATETIME() FOR FechaInicio;
ALTER TABLE BANDEJA_ENVIO_EMAIL
ADD CONSTRAINT DF_BANDEJA_EMAIL_FechaFinal DEFAULT SYSDATETIME() FOR FechaFinal;






ALTER TABLE BANDEJA_ENVIO_SMS DROP CONSTRAINT DF_BANDEJA_SMS_FechaInicio;
ALTER TABLE BANDEJA_ENVIO_SMS DROP CONSTRAINT DF_BANDEJA_SMS_FechaFinal;