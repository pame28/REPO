Provider=IBMDA400;
Data Source=MI_AS400;
User ID=USR;
Password=PWD;
Naming=System;
Default Collection=QGPL;






private static async Task EjecutarCL(OleDbConnection conn, string comando)
{
    var comandoLimpio = comando.Trim();
    var largo = comandoLimpio.Length;

    using var cmd = new OleDbCommand(
        "CALL QSYS/QCMDEXC(?, ?)",
        conn);

    cmd.CommandType = CommandType.Text;

    cmd.Parameters.Add(new OleDbParameter
    {
        OleDbType = OleDbType.Char,
        Size = 32702,
        Value = comandoLimpio
    });

    cmd.Parameters.Add(new OleDbParameter
    {
        OleDbType = OleDbType.Decimal,
        Value = largo
    });

    await cmd.ExecuteNonQueryAsync();
}
