using BPNotifica.Data;
using BPNotifica.Interfaces;
using BPNotifica.Models;
using Microsoft.EntityFrameworkCore;
using System.Collections.Generic;
using System.Threading.Tasks;

namespace BPNotifica.Repositories
{
    public class BandejaEnvioSmsRepository : IBandejaEnvioSmsRepository
    {
        private readonly AppDbContext _context;

        public BandejaEnvioSmsRepository(AppDbContext context)
        {
            _context = context;
        }

        public async Task<IEnumerable<BandejaEnvioSms>> GetAllAsync()
        {
            return await _context.BandejaEnvioSms.ToListAsync();
        }

        public async Task<BandejaEnvioSms> GetByIdAsync(int id)
        {
            return await _context.BandejaEnvioSms.FindAsync(id);
        }

        public async Task AddAsync(BandejaEnvioSms entity)
        {
            await _context.BandejaEnvioSms.AddAsync(entity);
            await _context.SaveChangesAsync();
        }

        public async Task UpdateAsync(BandejaEnvioSms entity)
        {
            _context.BandejaEnvioSms.Update(entity);
            await _context.SaveChangesAsync();
        }

        public async Task DeleteAsync(int id)
        {
            var entity = await _context.BandejaEnvioSms.FindAsync(id);
            if (entity != null)
            {
                _context.BandejaEnvioSms.Remove(entity);
                await _context.SaveChangesAsync();
            }
        }
    }
}













#region FASE 2 - Consumir AS400 y enviar PIN
public async Task<ReposicionPinResponseDto> Fase2_ConsumirAs400_UnificadoAsync(TarjetaModel tarjeta, ReposicionPinRequestDto request)
{
    try
    {
        // 1️⃣ Preparar request para AS400
        var as400Request = new AS400RequestDto
        {
            NumeroTarjeta = tarjeta.NumeroTarjeta.PadLeft(16, ' '),
            FechaVencimiento = tarjeta.FechaFinVigencia.ToString("yyyyMMdd")
        };

        // 2️⃣ Ejecutar programa en AS400
        var as400Response = await _as400Repository.EjecutarProgramaAsync(as400Request);
        var codigoAs400 = as400Response.CodigoError?.Trim();

        if (!string.IsNullOrWhiteSpace(codigoAs400) && codigoAs400 != "00")
            return await MapearErrorAs400Async(as400Response);

        var pinGenerado = as400Response.Pin;

        // 3️⃣ Preparar mensaje según Método de Envío
        switch (request.MetodoEnvio)
        {
            case 1: // SMS
                var sms = new BandejaEnvioSm
                {
                    NumeroTarjeta = tarjeta.NumeroTarjeta,
                    Celular = request.Telefono,
                    Telco = "E",
                    Sms = $"{request.ContenidoSMS} PIN: {pinGenerado}",
                    Referencia = Guid.NewGuid().ToString("N").Substring(0, 12).ToUpper(),
                    FechaInicio = DateTime.Now,
                    Estado = 0
                };
                await _smsRepository.AgregarAsync(sms, CancellationToken.None);
                break;

            case 2: // Correo
                var email = new BandejaEnvioEmail
                {
                    NumeroTarjeta = tarjeta.NumeroTarjeta,
                    Correo = request.Correo,
                    CuerpoCorreo = $"{request.ContenidoCorreo} PIN: {pinGenerado}",
                    MailFrom = "no-reply@tuempresa.com",
                    MailSubject = "Tu PIN",
                    Referencia = Guid.NewGuid().ToString("N").Substring(0, 12).ToUpper(),
                    FechaInicio = DateTime.Now,
                    Estado = 0
                };
                await _emailRepository.AgregarAsync(email, CancellationToken.None);
                break;

            default:
                _logger.LogWarning($"Método de envío inválido: {request.MetodoEnvio}");
                break;
        }

        // 4️⃣ Retornar respuesta con PIN
        var respuesta = await ObtenerRespuestaAsync(0);
        respuesta.Pin = pinGenerado;
        return respuesta;
    }
    catch (Exception ex)
    {
        _logger.LogError(ex, "Error en Fase2 unificada (AS400 + Envío)");
        return await ObtenerRespuestaDinamicaAsync(99, "Excepción", ex.Message);
    }
}
#endregion








[HttpPost]
[Route("generar-pin-unificado")]
public async Task<ActionResult<ReposicionPinResponseDto>> GenerarPinUnificado([FromBody] ReposicionPinRequestDto request)
{
    // 1️⃣ Validar la tarjeta
    var fase1 = await _service.ValidarTarjetaAsync(request);
    if (fase1.CodigoInt != 0)
        return Ok(fase1);

    // 2️⃣ Obtener tarjeta
    var tarjeta = await _service.ObtenerTarjetaAsync(request.CIF, request.UltimosDigitosTC);
    if (tarjeta == null)
        return Ok(await _service.ObtenerRespuestaDinamicaAsync(5, "Tarjeta", "No se encontró tarjeta"));

    // 3️⃣ Consumir AS400 y enviar PIN automáticamente
    var fase2 = await _service.Fase2_ConsumirAs400_UnificadoAsync(tarjeta, request);
    return Ok(fase2);
}
















