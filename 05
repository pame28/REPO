namespace reposicion_pin.Dtos
{
    public class ReposicionPinRequestDto
    {
        public string CIF { get; set; }
        public string DNI { get; set; }
        public string Cliente { get; set; }
        public int MetodoEnvio { get; set; }
        public string Telefono { get; set; }
        public string OperadorTelefono { get; set; }
        public string Correo { get; set; }
        public string UltimosDigitosTC { get; set; }
        public string ContenidoSMS { get; set; }
        public string ContenidoCorreo { get; set; }
    }
}






------


namespace reposicion_pin.Dtos
{
    public class ReposicionPinResponseDto
    {
        public string Codigo { get; set; }
        public string Descripcion { get; set; }
    }
}





------



using Microsoft.AspNetCore.Mvc;
using reposicion_pin.Dtos;

namespace reposicion_pin.Controllers
{
    [ApiController]
    [Route("api/reposicion-pin")]
    public class ReposicionPinController : ControllerBase
    {
        [HttpPost]
        public ActionResult<ReposicionPinResponseDto> ReposicionarPin(
            [FromBody] ReposicionPinRequestDto request)
        {
            // RESPUESTA MOCK TEMPORAL
            // En el siguiente paso esto llamar√° al Service
            var response = new ReposicionPinResponseDto
            {
                Codigo = "00",
                Descripcion = "Servicio activo - paso 1"
            };

            return Ok(response);
        }
    }
}

