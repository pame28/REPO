using (var cmdLib = conn.CreateCommand())
{
    cmdLib.CommandType = CommandType.Text;

    string clCommand = "CHGLIBL LIBL(BPPGM BPTARJ BPMSG BPDAT BPSEG QTEMP)";
    int cmdLength = clCommand.Length;

    cmdLib.CommandText =
        $"CALL QSYS2.QCMDEXC('{clCommand}', {cmdLength})";

    await cmdLib.ExecuteNonQueryAsync();
}
